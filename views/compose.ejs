<%- include('partials/header'); -%>
<h1 class="home" style="font-weight: bold">COMPOSE</h1>
<form action="/compose" method="post" class="home">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input
      name="postTitle"
      type="text"
      class="form-control"
      id="title"
      aria-describedby="emailHelp"
    />
  </div>
  <div class="">
    <label for="post" class="form-label">Post</label>
    <textarea
      name="postBody"
      class="form-control"
      id="post"
      rows="6"
      cols="50"
    ></textarea>
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer'); -%>
